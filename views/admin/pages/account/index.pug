extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  +alert-success(3000)
  .ml-3
    h4 Danh sách tài khoản
    .card   
      .card-body 
        .row
          .col-8
          .col-4
            a(href=`${prefixAdmin}/accounts/create`)
              button(class='btn btn-outline-success') + Thêm mới  
        .card-title Danh sách
        table.table.table-hover.table-sm 
          thead 
            tr  
              th STT 
              th Hình đại diện
              th Họ và tên
              th Phân quyền
              th Email
              th Trạng thái
              th Hành động
          tbody 
            each item, index in records
              tr 
                td= index + 1
                td 
                  img(
                    src=item.avatar,
                    alt=item.fullName,
                    srcset="",
                    width="100px",
                    height="auto"
                  )
                td=item.fullName
                td=item.role.title
                td=item.email
                td
                  a(
                    href="javascript:;"
                    class=`badge ${item.status === "active" ? "badge-success" : "badge-danger"}`
                    button-change-status
                    data-status = item.status
                    data-id = item.id
                    ) #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                    
                td 
                  a(
                    href = `${prefixAdmin}/accounts/detail/${item.id}`
                    class="btn btn-secondary btn-sm mr-1"
                    ) Chi tiết
                  a(
                    href = `${prefixAdmin}/accounts/edit/${item.id}`
                    class="btn btn-warning btn-sm"
                    ) Sửa
                  button(class="btn btn-danger btn-sm ml-1" button-delete-item data-id = item.id) Xóa
    form(
      action = ""
      method = "POST"
      id = "form-delete-item"
      data-path = `${prefixAdmin}/accounts/delete`
    )
    form(
      action = ""
      method = "POST"
      id = "form-change-status"
      data-path = `${prefixAdmin}/accounts/change-status`
    )
  script(src="/admin/js/product.js") 