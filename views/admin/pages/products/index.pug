extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main 
  .ml-3
    h1 Danh sách sản phẩm
    .card   
      .card-header Bộ lọc và tìm kiếm
      .row
        .col-6
          .card-body 
            +filter-status(filterStatus)
        .col-6.d-flex.align-items-center
          +search(keyword)
      
    div.card-header Danh sách
    table.table.table-hover.table-sm 
      thead 
        tr  
          th STT 
          th Hình ảnh 
          th Tên sản phẩm
          th Giá
          th Trạng thái 
          th Hành động
      tbody 
        each item, index in products
          tr 
            td= index + 1
            td 
              img(
                src=item.thumbnail,
                alt=item.title,
                srcset="",
                width="100px",
                height="auto"
              )
            td=item.title
            td="$" + item.price
            td
              a(href="#", class=`badge ${item.status === "active" ? "badge-success" : "badge-danger"}`) #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
            td 
              button(class="btn btn-warning btn-sm") Sửa
              button(class="btn btn-danger btn-sm ml-1") Xóa
    nav
      ul.pagination
        if(pagination.currentPage > 1) 
          li.page-item
            button(class='page-link', button-pagination = pagination.currentPage - 1) Previous
        -for (var i = 1; i <= pagination.totalPages; i++)
          li(class = `page-item ${i == pagination.currentPage ? 'active' : ''}`)
            button(class='page-link', button-pagination = i) #{i}
        if(pagination.currentPage < pagination.totalPages)
          li.page-item
            button(class='page-link', button-pagination = pagination.currentPage + 1) Next