extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert-success.pug
block main 
  - if (messages.success)
      +alert-success(3000)
  .ml-3
    h1 Danh sách sản phẩm
    .card   
      .card-header Bộ lọc và tìm kiếm
      .row
        .col-6
          .card-body 
            +filter-status(filterStatus)
        .col-6.d-flex.align-items-center
          +search(keyword)
      
      .card-body 
        .card-title Danh sách
        +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
        table.table.table-hover.table-sm 
          thead 
            tr  
              th 
                input(type="checkbox" name="checkall")
              th STT 
              th Hình ảnh 
              th Tên sản phẩm
              th Giá
              th Vị trí
              th Trạng thái 
              th Hành động
          tbody 
            each item, index in products
              tr 
                td  
                  input(type="checkbox" name = 'id' value=item.id)
                td= index + 1
                td 
                  img(
                    src=item.thumbnail,
                    alt=item.title,
                    srcset="",
                    width="100px",
                    height="auto"
                  )
                td=item.title
                td="$" + item.price
                td  
                  input(type="number" style='width:50px' value = item.position input-position)
                td
                  a(
                    href="javascript:;"
                    class=`badge ${item.status === "active" ? "badge-success" : "badge-danger"}`
                    button-change-status
                    data-status = item.status
                    data-id = item.id
                    ) #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                    
                td 
                  button(class="btn btn-warning btn-sm") Sửa
                  button(class="btn btn-danger btn-sm ml-1" button-delete-item data-id = item.id) Xóa
    +pagination(pagination)
    form(
      action = ""
      method = "POST"
      id = "form-change-status"
      data-path = `${prefixAdmin}/products/change-status`
    )
    form(
      action = ""
      method = "POST"
      id = "form-delete-item"
      data-path = `${prefixAdmin}/products/delete`
    )
  script(src="/admin/js/product.js") 