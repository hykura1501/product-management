extends ../../layouts/default.pug

block main 
  .ml-3
    h1 Danh sách sản phẩm
    .card   
      .card-header Bộ lọc và tìm kiếm
      .card-body 
        each item in filterStatus
          button(
            class=`btn btn-outline-success ${item.class} mr-3`
            button-status=item.status
          )=item.name
    div(class="m-4") Danh sách
    table.table.table-hover.table-sm 
      thead 
        tr  
          th STT 
          th Hình ảnh 
          th Tên sản phẩm
          th Giá
          th Trạng thái 
          th Hành động
      tbody 
        each item, index in products
          tr 
            td= index + 1
            td 
              img(
                src=item.thumbnail,
                alt=item.title,
                srcset="",
                width="100px",
                height="auto"
              )
            td=item.title
            td="$" + item.price
            td
              a(href="#", class=`badge ${item.status === "active" ? "badge-success" : "badge-danger"}`) #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
            td 
              button(class="btn btn-warning btn-sm") Sửa
              button(class="btn btn-danger btn-sm ml-1") Xóa
        