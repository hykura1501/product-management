extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug
block main 
  .container.my-5
    .row.d-flex.justify-content-center
      .col-6
        div.text-center
          +box-head(pageTitle)
        form(action="/user/password/reset" method="POST" class="d-flex flex-column")
          div
            div(class="form-group mt-3 mb-3") 
              label(for="email" class="form-label") Email
              input(type="text" name="email" id="email" class="form-control" readonly disabled value=email) 
            div(class="form-group mt-3 mb-3") 
              label(for="password" class="form-label") Mật khẩu
              input(type="password" name="password" id="password" class="form-control") 
            div(class="form-group mt-3 mb-3") 
              label(for="passwordConfirm" class="form-label") Nhập lại mật khẩu
              input(type="password" name="passwordConfirm" id="passwordConfirm" class="form-control") 
          div.d-flex.justify-content-center
            button(type="submit" class="btn btn-success") Xác nhận

