extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug
block main 

  .container.my-5
    .row.d-flex.justify-content-center
      .col-8.d-flex.flex-column.justify-content-center
        p(class="alert alert-success")="Chúc mừng bạn đã đặt hành thành công. Đơn hàng của bạn sẽ được xử lý trong thời gian sớm nhât"
        div(class="text-center")
          h4 Thông tin cá nhân
          table.table.table-hover.table-bordered
            tbody 
              tr 
                td Họ và tên
                td=order.userInfor.fullName 
              tr 
                td Số điện thoại
                td=order.userInfor.phone 
              tr 
                td Địa chỉ
                td=order.userInfor.address 
          h4 Thông tin đơn hàng
          table.table.table-hover.table-bordered
            thead 
              th STT 
              th Ảnh 
              th Tên 
              th Giá
              th Số lượng 
              th Tổng tiền 
            tbody 
              each item, index in order.products
                tr 
                  td=index + 1
                  td 
                    img(src=item.productInfor.thumbnail, alt=item.productInfor.title img-preview class='img-thumbnail')
                  td=item.productInfor.title
                  td= "$" + item.priceNew
                  td=item.quantity
                  td= "$" + item.totalPrice
          h4(class="text-end") Tổng tiền: $#{order.totalPrice}

          